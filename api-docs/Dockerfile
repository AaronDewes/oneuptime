# Pull base image nodejs image.
FROM node:latest

#Use bash shell by default
SHELL ["/bin/bash", "-c"]

ENV PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true

RUN mkdir -p /usr/src/app

WORKDIR /usr/src/app

# Install app dependencies
COPY package*.json /usr/src/app/
RUN npm ci --only=production

# Bundle app source
COPY . /usr/src/app

# Expose ports.
#   - 1445: OneUptime Docs
EXPOSE 1445

#Run the app
CMD [ "npm", "start" ]