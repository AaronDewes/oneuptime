    "bugs": {
        "url": "https://gitlab.com/fyipe-project/app/issues"
    },
    "homepage": "https://gitlab.com/fyipe-project/app#readme",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "./**/*.{json,yml,yaml,md}": [
            "prettier --write --config .prettierrc.json",
            "git add"
